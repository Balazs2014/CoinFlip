<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/KepErme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/heads" />

    <LinearLayout
        android:id="@+id/gombLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/KepErme"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gombFel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FEJ" />

        <Button
            android:id="@+id/gombIras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ÍRÁS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gombLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDobasok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dobások: 0" />

        <TextView
            android:id="@+id/textGyozelem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Győzelem: 0" />

        <TextView
            android:id="@+id/textVereseg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vereség: 0" />

    </LinearLayout>

</RelativeLayout>